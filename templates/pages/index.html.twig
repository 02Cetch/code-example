{% extends 'base.html.twig' %}

{% block body %}
{% include 'navbar.html.twig' %}
<section class="s-top">
    <h1 class="head_title">Блог о технологиях</h1>
    <div class="description">
        <h5 class="head_descr">И всем, что с ними связано <span class="typeline" id="typeline"></span></h5>
    </div>
</section>
<section class="s-posts">
    <div class="default-indent"></div>
    <div class="container">
        <div class="row">
            {% for article in articles %}
                <div class="col-md-6 col-sm-6">
                    <div class="post_item">
                        <a href="#">
                            <div class="post_wrapper">
                                <img src="img/1.png" alt="">
                                    <p class="post_tag">
                                        {% for tag in article.getTags %}
                                           <a href="#">{{ tag.getTitle }}</a>
                                        {% endfor %}
                                    </p>
                            </div>
                            <h2 class="post_title"><a href="#">{{ article.getTitle }}</a></h2>
                            <p class="post_description">
                                {{ article.getTextShort }}
                            </p>
                            <p class="post_detail">
                                <time class="post_time">· {{ article.getCreatedAt|date('d.m.Y H:i')}} </time>
                                <span class="post_read_time"> · 3 min read</span>
                                <span class="post_comments"> · 2 comments</span>
                            </p>
                        </a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</section>
{% endblock %}
